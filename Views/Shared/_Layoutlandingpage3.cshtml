		<!-- INPUT MASK JS-->
		
		<script>
				// SUBMIT Formulario solicitud credito
			
			$(document).ready(function () {
				$('#btnSubmitSolicitud').on('click', function () {
                    if (document.formSolicitudC.reportValidity()) {
						$('#formSolicitudC').submit();
					}
				});
				$('#modalPoliticas').on('click', function () {
                    if (document.formSolicitudC.reportValidity()) {
						$('#modaldemo8').modal("show");
					}
				});
					
					
			});

			function rangeMontoChanged(obj){
				var number = parseInt(obj.value);
                var iRange = document.getElementById("inputRange2");
                iRange.value =  "$ "+ number.toLocaleString("es-CO");
			}
			function inputMontoKey(obj){
				
				var number = parseInt(obj.value);
                var iRange = document.getElementById("Monto");                
                if (number > 100000000){
                    number = 100000000;
				}
				 if (number < 1000000){
                    number = 1000000;
				}
				iRange.value = number
				obj.value = "$ "+ number.toLocaleString("es-CO");
			}
			function inputMontoFocus(obj){
				var number = parseInt(obj.value.substring(2).replaceAll(".",""));  
                if (number > 100000000){
                    number = 100000000;
				}
				 if (number < 1000000){
                    number = 1000000;
				}
				obj.value = number;
                //inputMontoKey(obj);
			}
		</script>
