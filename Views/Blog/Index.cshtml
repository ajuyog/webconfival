                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xl-5 col-md-12">
                            @foreach (var item in Model.Skip(2).Take(6))
                            {
                                <div class="row mb-5">
                              
                                    <div class="col-xl-4 col-md-4 col-sm-4 pe-sm-0 p-sm-max-0">
                                        <a asp-controller="Blog" asp-action="GetById" asp-route-id="@item.Id">
                                            <img src="@item.Imagen" alt="" title="" class="wp-100 editorpick-suggestion-img h-100">
                                        </a>
                                    </div>
                                    <div class="col-xl-8 col-md-8 col-sm-8 editorpicks-suggestions border p-2 br-sm-max-0">
                                        <a asp-controller="Blog" asp-action="GetById" asp-route-id="@item.Id" class="text-dark mb-4 blog-title">@item.Titulo</a>
                                        <div class="d-md-flex mt-0">
                                            <a class="d-flex"><span class="fe fe-user text-muted me-2 text-17"></span><div class="mt-0 mt-0  font-weight-semibold text-muted">Autor desconocido</div></a>
