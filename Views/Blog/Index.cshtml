									</a>
								</div>
								<div class="col-xl-8 col-md-8 col-sm-8 editorpicks-suggestions border p-2 br-sm-max-0">
									<a asp-controller="Blog" asp-action="GetById" asp-route-idBlog="@item.Id" class="text-dark mb-4 blog-title">@item.Titulo</a>
									<div class="d-md-flex mt-0">
										<a class="d-flex"><span class="fe fe-user text-muted me-2 text-17"></span><div class="mt-0 mt-0  font-weight-semibold text-muted">@item.Autor.Nombre</div></a>
										<div class="d-flex ms-auto">
											<a class="d-flex me-3"><span class="fe fe-calendar text-muted me-2 text-17"></span><div class="mt-0 mt-0  font-weight-semibold text-muted">@item.FechaPublicacion.ToShortDateString()</div></a>
										</div>
