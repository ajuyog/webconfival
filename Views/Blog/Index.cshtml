<div class="row" style="padding-top:125px; margin-bottom:80px;">
	<div class="col-xl-8 col-lg-7 col-md-12">
		<!-- card blog principal -->
		<div class="card">
			<div class="card-header border-bottom">
				<h3 class="card-title">Blog principal</h3>
			</div>
			<div class="card-body bg-white">
				<div class="row">
					<div class="ps-relative p-1 bg-light br-5">
						<a asp-controller="Blog" asp-action="GetById" asp-route-idBlog="@Model[0].Id" >
							<img src="@Model[0].Galeria[0].URLImagen" alt="@Model[0].Galeria[0].Alt" title="@Model[0].Titulo" class="card custom-card background-image-blog img1 mb-0">
							<span class="badge rounded-pill bg-primary-gradient blog-label label1">@Model[0].Categorias[0].Nombre</span>
						</a>
					</div>
					<div class="card-body">
						<a href="#" class="text-dark blog-title">@Model[0].Titulo</a>
						<p class="mb-0 text-muted mt-4 justify-policy">@Model[0].Contenido.Substring(0, Convert.ToInt32(Model[0].Contenido.Length * 0.25))</p>
						<a asp-controller="Blog" asp-action="GetById" asp-route-idBlog="@Model[0].Id" class="btn btn-outline-primary mt-2">Ver más...</a>
					</div>
					<div class="card-footer ">
						<div class="d-sm-flex align-items-center">
							<div class="avatar-list indicators">
								<a class="avatar avatar-md rounded-circle">
									<img src="@Model[0].Autor.ImagenAutor.URLImagen" class="rounded-circle">
								</a>
							</div>
							<h6 class="mb-0 text-muted ms-sm-2 mt-sm-0 mt-2">@Model[0].Autor.Nombre</h6>
							<div class="d-sm-flex ms-sm-auto">
								<a class="d-flex me-3"><span class="fe fe-calendar text-muted me-2 text-17"></span><div class="mt-0 mt-0 text-muted">@Model[0].FechaPublicacion.ToShortDateString()</div></a>
								<a class="me-0 d-flex"><span class="fe fe-message-square text-muted me-2 text-17"></span><div class="mt-0 mt-0 text-muted">@(Model[0].Comentarios.Count() == 1 ? " Comentario" : " Comentarios")</div></a>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>

		<!-- card recientes -->
		<div class="card">
			<div class="card-header border-bottom">
				<h3 class="card-title">Lo mas reciente</h3>
			</div>
			<div class="card-body bg-white">
				<div class="row">
					<div class="col-xl-6 col-md-12 my-2 p-xl-max-0">
