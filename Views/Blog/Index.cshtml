@model List<frontend.Models.BlogDTO>
@{
    Layout = "_Layoutlandingpage2";
}

<div class="main-container container-fluid">
    <div class="row" style="padding-top:125px;">
        <div class="col-xl-8 col-lg-7 col-md-12">
            <div class="card">
                <div class="card-header border-bottom">
                    <h3 class="card-title">@ViewBag.H2</h3>
                </div>
                <div class="card-body bg-white">
                    <div class="row">
                        <div class="ps-relative p-1 bg-light br-5">
                            <a asp-controller="Blog" asp-action="GetById" asp-route-id="@Model[0].Id">
                                <img src="@Model[0].Imagen" alt="" title="" class="card custom-card background-image-blog img1 mb-0">
                                <span class="badge rounded-pill bg-primary-gradient blog-label label1">@Model[0].Categoriass[0].Nombre</span>
                            </a>
                        </div>
                        <div class="card-body">
                            <a href="#" class="text-dark blog-title">@Model[0].Titulo</a>
                            <p class="mb-0 text-muted mt-4 justify-policy">@Model[0].Contenido.Substring(0, Convert.ToInt32(Model[0].Contenido.Length * 0.25))</p>
                            <a asp-controller="Blog" asp-action="GetById" asp-route-id="@Model[0].Id" class="btn btn-outline-primary mt-2">Ver más...</a>
                        </div>
                        <div class="card-footer ">
                            <div class="d-sm-flex align-items-center">
                                <div class="avatar-list indicators">
                                    <a class="avatar avatar-md rounded-circle">
                                        <img src="~/assets/images/photos/11.jpg" class="rounded-circle">
                                    </a>
                                </div>
                                <h6 class="mb-0 text-muted ms-sm-2 mt-sm-0 mt-2">Autor desconocido</h6>
                                <div class="d-sm-flex ms-sm-auto">
                                    <a class="d-flex me-3"><span class="fe fe-calendar text-muted me-2 text-17"></span><div class="mt-0 mt-0 text-muted">@Model[0].Publicacion.ToShortDateString()</div></a>
                                    <a class="me-0 d-flex"><span class="fe fe-message-square text-muted me-2 text-17"></span><div class="mt-0 mt-0 text-muted">@(Model[0].Comentarios.Count() == 1 ? " Comentario" : " Comentarios")</div></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-4 col-lg-5 col-md-12">
