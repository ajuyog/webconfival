@model frontend.Models.CategoriaDTO
@{
    Layout = "_Layout3";
}
<!-- PAGE-HEADER -->
<div class="page-header">
	<div>
		<h1 class="page-title">@(Model.Nombre == null ? "Crear Categorias" : "Editar Categoria")</h1>
	</div>
	<div class="ms-auto pageheader-btn">
		<ol class="breadcrumb">
			<li class="breadcrumb-item"><a href="javascript:void(0);">Blogs</a></li>
			<li class="breadcrumb-item active" aria-current="page">Categoria</li>
		<li class="breadcrumb-item active" aria-current="page">@(Model.Nombre == null ? "Crear Categorias" : "Editar Categoria")</li>
		</ol>
	</div>
</div>

<div class="row">
	<div class="col-lg-12 col-md-12" id="form-categoria">
		<div class="card">
			<div class="card-header border-bottom">
				<h3 class="card-title">@(Model.Nombre == null ? "Crear" : "Editar")</h3>
			</div>
			<div class="card-body">
				<p class="text-muted">@(Model.Nombre == null ? "Ingresa el nombre de la nueva categoria" : "Editar la categoria: " + Model.Nombre)</p>
				<div class="row">
					<div class="col-md-10 mb-3">
						<input hidden type="text" asp-for="Id" id="id-categoria" />
						<input class="form-control" asp-for="Nombre" placeholder="Nombre" type="text" id="nombre-categoria">
						<div class="invalid-feedback" id="invalid-nombre-categoria">Debes asignar un 'Nombre' a la categoria</div>
						<div class="invalid-feedback" id="invalid-nombre-categoria-existe">Ya existe una categoria con este nombre !!</div>
					</div>
					<div class="col-md-2">
						@if(Model.Nombre == null)
						{
							<button class="btn btn-primary btn-block" onclick="CrearCategoria()">Crear</button>
						}
						else
						{
							<button class="btn btn-primary btn-block" onclick="EditarCategoria()">Editar</button>
						}
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

<div class="row">
	<div id="categoria-guardada" class="hide-info">
		<div class="card">
			<div class="card-body">
				<div class="alert alert-default pad-text" role="alert">
					<span class="alert-inner--icon me-2"><i class="fe fe-thumbs-up"></i></span>
					<span class="alert-inner--text"><strong>Tu categoria,</strong>@(Model.Nombre == null ? " fue creada con exito !!!" : " fue editada con exito !!!")</span>
					<div class="row">
						<div class="col-12">
							@if(Model.Nombre == null)
							{
								<a asp-action="Create" class="btn btn-success" style="margin-top:20px;">Quiero crear otra Categoria !!</a>
							}
							else
							{
								<a asp-action="Get" class="btn btn-success" style="margin-top:20px;">Quiero ver todas las categorias</a>
							}
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


<div class="modal fade" id="api-error">
	<div class="modal-dialog modal-dialog-centered text-center " role="document">
		<div class="modal-content tx-size-sm">
			<div class="modal-body text-center p-4">
				<button aria-label="Close" class="btn-close" data-bs-dismiss="modal"><span aria-hidden="true">&times;</span></button>
				<i class="ion-wrench fs-65 text-primary lh-1 mb-5 d-inline-block"></i>
				<h4 class="text-success tx-semibold">Estamos trabajando para solucionar!</h4>
				<p class="text-muted">Nuestro sistema esta presentando cambios, intentalo de nuevo mas tarde.</p>
				<button aria-label="Close" class="btn btn-success pd-x-25" data-bs-dismiss="modal">Cerrar</button>
			</div>
		</div>
	</div>
</div>




